<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgr"
    android:textColor="@color/black_1" >

    <TableLayout
        android:id="@+id/tablelayout01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:collapseColumns="3"
         android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        

            <TextView
                android:id="@+id/textview01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名称" />

            <EditText
                android:id="@+id/Susername"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:drawableLeft="@drawable/login_user"
                android:background="@drawable/login_edit_bg"
                android:hint="请输入用户名"
                android:text="" />
        

        

            <TextView
                android:id="@+id/textview02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户密码" />

            <EditText
                android:id="@+id/Spassword"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/login_pwd"
                android:background="@drawable/login_edit_bg"
                 android:hint="请输入密码"
                android:text="" />
        
        

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="真实姓名" />

            <EditText
                android:id="@+id/Srealname"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:background="@drawable/login_edit_bg"
                android:drawableLeft="@drawable/login_user"
                 android:hint="请输入真实姓名"
                android:text="" />
        

            <TextView
                android:id="@+id/textviewsex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别" />

            <RadioGroup
                android:id="@+id/gender_g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/Smale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男" />

                <RadioButton
                    android:id="@+id/Sfemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女" />
            </RadioGroup>
       

        

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年龄" />

            <EditText
                android:id="@+id/Sage"
               android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:background="@drawable/login_edit_bg"
                android:hint="请输入年龄"
                 />
        

        

        

            <TextView
                android:id="@+id/school1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学校" />

            <Spinner
                android:id="@+id/school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
        
        

            <TextView
                android:id="@+id/school1ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年级" />

            <Spinner
                android:id="@+id/ygrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
        

            <TextView
                android:id="@+id/school1l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="班级" />

            <Spinner
                android:id="@+id/grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
        
         <TableRow 
         android:id="@+id/sd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
         >  
            

            <Button
                android:id="@+id/Scancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消 " >
            </Button>

            <Button
                android:id="@+id/Sregister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册 " >
            </Button>
       </TableRow>
    </TableLayout>

</LinearLayout>