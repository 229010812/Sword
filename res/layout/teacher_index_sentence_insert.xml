<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start"
    android:orientation="horizontal"
    android:textColor="@color/black_1" >

    <TableLayout
        android:id="@+id/tablelayout02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:collapseColumns="3"
         android:layout_marginLeft="20dp"
        android:layout_marginTop="110dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp">

        

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="例句" />

            <EditText
                android:id="@+id/seninsertsentence"
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:background="@drawable/login_edit_bg"
                
                 android:hint="请输入例句"
                />

           
       

        

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="翻译" />

            <EditText
                android:id="@+id/senfanyi"
               android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:background="@drawable/login_edit_bg"
                android:hint="请输入例句翻译"
                 />
              <TextView
                android:id="@+id/insertsemesterte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学期 " />

            <Spinner
                android:id="@+id/insertsemester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/school1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单元 " />

            <Spinner
                android:id="@+id/insertunit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
            
        
         <TableRow 
         android:id="@+id/sd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
         >  
            

            <Button
                android:id="@+id/Scancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消 " >
            </Button>

            <Button
                android:id="@+id/inputword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加" >
            </Button>
       </TableRow>
    </TableLayout>

</LinearLayout>
